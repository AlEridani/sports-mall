<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- DB 테이블가 컬럼들을 mapper에 매핑하기 위한 변수 선언 -->

	<!-- property - name : mapper.xml에서 사용될 이름 - value : DB테이블 및 컬럼 이름 -->
	<properties>
	<property name="member" value="member" />
		<property name="memberId" value="member_id" />
		<property name="password" value="password" />
		<property name="name" value="name" />
		<property name="phone" value="phone" />
		<property name="email" value="email"/>
		<property name="address" value="address"/>
		<property name="userGrade" value="user_grade"/>
	</properties>
	<!-- underscore 명명법을 camel 명명법으로 변환 가능하도록 세팅 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>


	<!-- typeAliases : mepper.xml의 select 리턴 타입에 들어갈 클래스 경로를 설정 -->
	<typeAliases>
		<package name="edu.spring.mall" />
	</typeAliases>
</configuration>