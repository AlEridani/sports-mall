<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.spring.mall.MemberMapper">

<insert id="insert">
  INSERT INTO ${member} (
    ${memberId}, ${password}, ${name}
    <if test="phone != null">, ${phone}</if>
    <if test="email != null">, ${email}</if>
    <if test="address != null">, ${address}</if>
    <if test="userGrade != null">, ${userGrade}</if>
  ) VALUES (
    #{memberId}, #{password}, #{name}
    <if test="phone != null">, #{phone}</if>
    <if test="email != null">, #{email}</if>
    <if test="address != null">, #{address}</if>
    <if test="userGrade != null">, #{userGrade}</if>
  )
</insert>

	<select id="select_all" resultType="MemberVO">
		select * from ${member}
	</select>
	
	<select id="select_checked_id" resultType="Integer">
		select count(${memberId}) from ${member}
		where ${memberId} = #{memberId}
	</select>
	
	<select id="select_by_id" resultType="MemberVO">
		select * from ${member}
		where ${memberId} likes #{memberId}
	</select>
	
	<select id="select_detail" resultType="MemberVO">
		select * from ${member{
		where ${memberId} = #{memberId}
	</select>
	
	 <select id="findByMemberId" resultType="CustomUserDetails">
        select * from ${member}
		where ${memberId} = #{memberId}
    </select>
	
	<update id="update" parameterType="map">
		update ${member}
		set 
		${password} = #{password},
		${name} = #{name},
		${phone} = #{phone},
		${email} = #{email},
		${address} = #{address},
		${userGrade} = #{userGrade}
		where ${memberId} = #{memberId}
	</update>
	<!-- 비밀번호 미포함 -->
	<update id="updateUserDetails" parameterType="map">
		update ${member}
		set 
		${name} = #{name},
		${phone} = #{phone},
		${email} = #{email},
		${address} = #{address}
		where ${memberId} = #{memberId}
	</update>
	<!-- 비밀번호만 수정 -->
	<update id="updateUserPassword" parameterType="map">
		update ${member}
		set 
		${password} = #{password}
		where ${memberId} = #{memberId}
	</update>
	
	
	
	<delete id="delete">
		delete from ${member}
		where ${memberId} = #{memberId}
	</delete>


</mapper>